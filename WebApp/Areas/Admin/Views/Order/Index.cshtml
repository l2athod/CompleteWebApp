@model MyApp.Models.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h1 class="text-primary">Orders List</h1>
        </div>
        <div class="col-6 text-end">
            @*<a class="btn btn-success" asp-controller="Product" asp-action="CreateUpdate"><i class="bi bi-bag-plus-fill p-2"></i>Add Product</a>*@
            <a asp-action="Index" asp-controller="Order" asp-route-status="pending">Pending</a>
            <a asp-action="Index" asp-controller="Order" asp-route-status="approved">Approved</a>
            <a asp-action="Index" asp-controller="Order" asp-route-status="underprocess">UnderProccess</a>
            <a asp-action="Index" asp-controller="Order" asp-route-status="shipped">Shipped</a>
            <a asp-action="Index" asp-controller="Order" asp-route-status="all">All</a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.product.ProductName)</th>*@
            @*<th>CategoryName</th>*@
            <th>Customer Name</th>
            <th>Phone Number</th>
            <th>Order Status</th>
            <th>Order Total</th>
            <th>Action</th>
        </tr>
    </thead>
</table>


@section scripts{
    <script src="~/js/Order.js" ></script>
}