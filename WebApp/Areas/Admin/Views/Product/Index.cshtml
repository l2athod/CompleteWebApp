@model MyApp.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Product" asp-action="CreateUpdate"><i class="bi bi-bag-plus-fill p-2"></i>Add Product</a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            @*<th>@Html.DisplayNameFor(model => model.product.ProductName)</th>*@
            @*<th>CategoryName</th>*@
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
</table>


@section scripts{
    <script src="~/js/Product.js" ></script>
}