@model MyApp.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h1 class="text-primary">Categories List</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Category" asp-action="CreateUpdate"><i class="bi bi-bag-plus-fill p-2"></i>Add Category</a>
        </div>
    </div>
</div>
<table class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
            @*<th>CategoryName</th>*@
            <th>DisplayOrder</th>
            <th>OrderedDate</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.DisplayOrder</td>
                <td>@Html.DisplayFor(model => item.OrderedDate)</td>
                <td role="group">
                    <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>